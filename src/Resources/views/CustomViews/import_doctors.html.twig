{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block form %}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header">
                            <h4 class="box-title">
                                Import
                            </h4>
                        </div>
                        <div class="box-body">
                            <div class="sonata-ba-collapsed-fields">
                                {{ form_start(form) }}

                                {{ form_errors(form) }}
                                <div class="form-group">
                                    {{ form_row(form.file, { 'label': 'Fichier' }) }}
                                </div>

                                <div class="form-group" style="display: none;">
                                    {{ form_widget(form.encode) }}
                                </div>
                                <div class="form-group" style="display: none;">
                                    {{ form_widget(form.loaderClass) }}
                                </div>
                                <div class="form-group">
                                      {{ form_row(form.submit, { 'label': 'Import' }) }}
                                </div>

                            </div>
                        </div>
                        <div class="box-header">
                            <h4>Le fichier doit Ãªtre sous cette forme</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
